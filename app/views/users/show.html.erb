<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<% if current_user.admin? && current_user.id == @user.id %>
  <%= t "users.show.manage" %>
  <%= render Register.pending %>

  <%= t "users.show.check" %>
  <p><%= t "users.show.pending" %></p>
  <li> <%= render @user.registers.pending %></li>

  <p><%= t "users.show.register_success" %></p>
  <li><%= render @user.registers.approved %></li>

  <p><%= t "users.show.register_fail" %></p>
  <li><%= render @user.registers.rejected %></li>

<% else %>
  <p><%= t "users.show.pending" %></p>
  <li> <%= render @user.registers.pending %></li>

  <p><%= t "users.show.register_success" %></p>
  <li><%= render @user.registers.approved %></li>

  <p><%= t "users.show.register_fail" %></p>
  <li><%= render @user.registers.rejected %></li>
<% end %>

