<li>
  <%= course.name %>

  <p>
    <strong>status:</strong>
    <%= course.status %>
  </p>

  <%= link_to t("courses.course.view_detail"), course %> 

  <% if current_user.admin? %>
    <%= link_to t("courses.course.update_course"), edit_course_path(course) %> |
    <%= link_to t("courses.course.delete_course"), course, method: :delete,data: { confirm: "You sure?" } %>
  <% end %>
</li>
